{
  "env": {
    "es2020": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "import/prefer-default-export": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": "error",
    "semi": [
      "error",
      "always"
    ]
  }
}
